@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout page
}

<div class="container mt-5">
    <h2 class="text-danger">An error occurred</h2>

    @if (ViewBag.Exception != null)
    {
        <div class="alert alert-danger mt-3">
            <strong>Error Details:</strong>
            <p>@ViewBag.Exception.Message</p>
            <p>@ViewBag.Exception.StackTrace</p>
        </div>
    }

    <p class="mt-3">
        <a href="@Url.Action("Index", "Home")">Back to Home</a>
    </p>
</div>