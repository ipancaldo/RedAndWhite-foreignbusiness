<div class="d-flex" id="wrapper">
    <!-- Sidebar-->
    <div class="border-end bg-white" id="sidebar-wrapper">
        <div class="list-group list-group-flush">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Golosinas
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.CandyChewy})">Caramelos blandos</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Caramelos duros</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.Chocolates})">Chocolates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Galletitas</a>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            Mates y bombillas
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Mates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Bombillas</a>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                            Otros
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Mates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Bombillas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="page-content-wrapper">
        <button class="nav-toggle" id="sidebarToggle" aria-label="toggle navigation">
            <span class="hamburger"></span>
        </button>
        <div class="container-fluid p-5">
            <div class="row">
                <partial name="_ProductsList"  />
            </div>
        </div>
    </div>
</div>