@model List<RedAndWhite.Model.Products.ProductModel>;
@using RedAndWhite.Infrastructure.Enums;

<div class="d-flex" id="wrapper">
    <!-- Sidebar-->
    <div class="border-end bg-white" id="sidebar-wrapper">
        <div type="button">
            <a class="accordion-button accordion-button-restyled" href="@Url.Action("Index", "Products")">Todos</a>
        </div>
        <div class="list-group list-group-flush">
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Golosinas
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.CandyChewy})">Caramelos blandos</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.CandyHard})">Caramelos duro</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.Chocolates})">Chocolates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="@Url.Action("Index", "Products", new {category = Categories.Cookies})">Galletitas</a>
                        </div>
                        <asp:HiddenField id="WasCollapsed" runat="server" />
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            Mates y bombillas
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Mates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Bombillas</a>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                            Otros
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body list-group-flush">
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Mates</a>
                            <a class="list-group-item list-group-item-action list-group-item-light" href="#!">Bombillas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="page-content-wrapper">
        <button class="nav-toggle" id="sidebarToggle" aria-label="toggle navigation">
            <span class="hamburger"></span>
        </button>
        <div class="container-fluid p-5">
            <div class="row">
                <partial name="_ProductsList" />
            </div>
        </div>
    </div>
    
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-warning" id="alert-message" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <strong>@TempData["AlertMessage"]!.ToString()</strong>
        </div>
    }
</div>